{
    "manifest_version": 3,
    "name": "Focus Tomato (Pomodoro)",
    "version": "1.0.1",
    "description": "A simple Pomodoro timer with breaks, badge countdown, and notifications.",
    "action": { "default_popup": "popup.html", "default_title": "Focus Tomato" },
    "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" },
    "permissions": ["alarms", "notifications", "storage"],
    "background": { "service_worker": "sw.js", "type": "module" }
  }
  